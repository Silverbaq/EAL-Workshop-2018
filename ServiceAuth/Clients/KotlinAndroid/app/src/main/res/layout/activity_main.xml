<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:padding="5dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_btnNoAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No authentication" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_btnBasicAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Basic authentication" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_btnTokenAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="JWT Token authentication" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_btnCertificateAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Certificate authentication" />
    </LinearLayout>
</LinearLayout>